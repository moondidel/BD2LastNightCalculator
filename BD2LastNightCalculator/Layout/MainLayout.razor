@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* 상단 바 *@
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h6" Class="ml-3">종말의 서 계산기</MudText>
    </MudAppBar>

    @* 왼쪽 메뉴 (사이드바) *@
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    @* 본문 영역 *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
